escape ``
escape `e
termcapinfo xterm* ti@:te@
startup_message off
defutf8 on
vbell off
autodetach on

# Create new screen
bindkey ^N screen
# Change now screen title
bindkey ^T title
# split window, Alt+x
bindkey ^[x split
# Refresh display when exit program
altscreen on
# Dynamic title
shelltitle "$ |bash"

bindkey "^[[C" next
bindkey "^[[D" prev
bindkey "^[[A" focus up
bindkey "^[[B" focus down

# screen IN gnome-terminal, Ctrl+*
bindkey "^[[1;5C" next
bindkey "^[[1;5D" prev
bindkey "^[[1;5A" prev
bindkey "^[[1;5B" prev

# Remove the split window
bindkey ^R remove
# Kill the window
bindkey ^K kill
# No split window, just Only one window
bindkey ^O only

defscrollback 30000
hardstatus alwayslastline
hardstatus string "%{=b}%{b}%-w%{.BW}%10>%n*%t%{-}%+w%< %=%{kG}%C%A , %Y-%m-%d"
#caption always "%{=b}%{b}%-w%{.BW}%10>%n*%t%{-}%+w%< %=%{kG}%C%A , %Y-%m-%d"
